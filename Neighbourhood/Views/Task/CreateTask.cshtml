
@model Neighbourhood.Models.Task

@{
    ViewBag.Title = "CreateTask";
}
<header><h2>Creat a Task</h2></header>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
  
    <div class="wrapper_frm_grp">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.task_des)

                <div class="formgrouptxt">
                    @Html.TextAreaFor(model => model.task_des, 5, 50, null)
                    @Html.ValidationMessageFor(model => model.task_des)
                </div>
            </div>
            <div class="form-group">
                <div class="formgroup_loginbtn">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>

        <div>
            @Html.ActionLink("Back to List", "MainTaskPage")
        </div>
    </div>
}
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
    }